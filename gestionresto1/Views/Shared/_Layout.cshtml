<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - gestionresto1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/gestionresto1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa fa-cutlery" aria-hidden="true" style='color:rgb(255, 220, 7);font-size:148%;'></i>
                    gestionresto
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                
                            @if (!string.IsNullOrEmpty(ViewBag.UserName) && !string.IsNullOrEmpty(ViewBag.userSurname))
                        {
                        @if (ViewBag.UserName == "hammemi" && ViewBag.userSurname == "aziz")
                        {
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="categorie" asp-action="Index">
                                        <i class="fa fa-list" aria-hidden="true"></i>
                                        Categorie
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Produit" asp-action="Index">
                                        <i class="fa fa-product-hunt" aria-hidden="true"></i>
                                        Produit
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="commande" asp-action="Index">
                                        <i class="fa fa-list" aria-hidden="true"></i>
                                        Commande
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="user" asp-action="Index">
                                        <i class="fa fa-users" aria-hidden="true"></i>

                                        users
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark">  <i class="fa fa-user" aria-hidden="true"></i>@ViewBag.UserName</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Logout">
                                        <i class="fa fa-sign-out" aria-hidden="true"></i>
                                        logout
                                    </a>
                                </li></ul>
                            }else

                                {
                                <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">  <i class="fa fa-home" aria-hidden="true"></i>Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">
                                        <i class="fa fa-list" aria-hidden="true"></i>
                                        listproduit
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="listcommande">
                                        <i class="fa fa-list" aria-hidden="true"></i>
                                        listcommande
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark">
                                        <i class="fa fa-user" aria-hidden="true"></i>
                                        @ViewBag.UserName
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Logout">
                                        <i class="fa fa-sign-out" aria-hidden="true"></i>
                                        logout
                                    </a>
                                </li></ul>
                            }

                        }else{

                      <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="fa fa-home" aria-hidden="true"></i>
                                    Home
                                </a>
                        </li>
                        <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">
                                    <i class="fa fa-product-hunt" aria-hidden="true"></i>

                                    listproduit
                                </a>
                        </li>
                        <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="listcommande">
                                    <i class="fa fa-list" aria-hidden="true"></i>
                                    listcommande
                                </a>
                        </li>
                         <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="login">
                                    <i class="fa fa-sign-in" aria-hidden="true"></i>
                                    Login
                                </a>
                        </li>
                        <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="user" asp-action="Create">
                                    <i class="fa fa-registered" aria-hidden="true"></i>
                                    resegter
                                </a>
                        </li>
                        </ul>
                      }
                  
                </div>
            </div>
        </nav>
    </header>
    <style>
        li{
            padding-left:3%;
        }
    </style>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br/>
    <br/>
    <section class="last-section">
        <!-- Contenu de votre dernière section -->
    </section>

    <footer class="footer">
        <div class="footer-content">
            <div class="footer-social">
                <a href="#" target="_blank">
                    <i class="fa fa-cutlery" aria-hidden="true"></i>
                </a>
                <a href="#" target="_blank">
                    <i class="fa fa-coffee" aria-hidden="true"></i>
                </a>
                <a href="#" target="_blank">
                    <i class="fa fa-cart-plus" aria-hidden="true"></i>

                </a>
            </div>
            <div class="footer-info">
                <p>Nom du restaurant</p>
                <p>Adresse | Ville | Code Postal</p>
                <p>Téléphone : 123-456-7890</p>
                <p>Email : info@restaurant.com</p>
            </div>
            <div class="footer-social">
                <a href="#" target="_blank">
                    <i class="fa fa-facebook" aria-hidden="true"></i>
                </a>
                <a href="#" target="_blank"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                <a href="#" target="_blank">
                    <i class="fa fa-envelope-o" aria-hidden="true"></i>
                </a>
            </div>
        </div>
        <p class="footer-disclaimer">&copy; 2023 Nom du restaurant. Tous droits réservés.</p>
    </footer>
    <style>
        .last-section {
            margin-top: 40%;
        }

        .footer {
            background-color:ivory;
            text-align: center;
            margin-top: 20px;
        }

        .footer-content {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            gap: 20px;
        }

        .footer-logo img {
            max-width: 100px;
        }

        .footer-info {
            text-align: center;
        }

        .footer-social a {
            color: #888;
            margin: 0 10px;
            font-size: 20px;
            text-decoration: none;
        }

            .footer-social a:hover {
                color: #333;
            }

        .footer-disclaimer {
            margin-top: 20px;
            color: #888;
            font-size: 12px;
        }
    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
