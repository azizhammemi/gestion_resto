@model IEnumerable<gestionresto1.Models.Commande>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nomuser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prenomuser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nomproduit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nomuser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prenomuser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nomproduit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantity)
            </td>
            <td>
                    @{
                        decimal total = item.prix * item.quantity;
                    }
                    @Html.DisplayFor(modelItem => total)
            </td>
                <td>
                    <img src="@item.image" alt="Product Image" style="height: 100px; width: 100px;" />
                    </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.idcommande">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idcommande">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idcommande">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
