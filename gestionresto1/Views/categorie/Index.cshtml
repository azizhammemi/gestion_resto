@model IEnumerable<gestionresto1.Models.Categorie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idCategorie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idCategorie)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idCategorie">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idCategorie">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idCategorie">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
