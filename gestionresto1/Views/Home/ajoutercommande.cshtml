@model gestionresto1.Controllers.ProduitCommandeViewModel

@{
    ViewData["Title"] = "Ajouter une commande";
}



<div class="container mt-5 mb-5">
    <div class="d-flex justify-content-center row">
        <div class="col-md-10">
            @using (Html.BeginForm("Ajouter", "Home", FormMethod.Post))
            {
                <div class="row p-2 bg-white border rounded">
                    <div class="col-md-3 mt-1"><input type="image" class="img-fluid img-responsive rounded product-image" src="@Model.Produit.image"  /></div>
                    <div class="col-md-6 mt-1">
                        <input class="form-control" name="nomproduit" id="nomproduit" value="@Model.Produit.name" />

                        <div class="d-flex flex-row">
                            <div class="ratings mr-2"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div><span>310</span>
                        </div>
                        <div class="mt-1 mb-1 spec-1"><span>100% cotton</span><span class="dot"></span><span>Light weight</span><span class="dot"></span><span>Best finish<br></span></div>
                        <div class="mt-1 mb-1 spec-1"><span>Unique design</span><span class="dot"></span><span>For men</span><span class="dot"></span><span>Casual<br></span></div>

                        <label for="numero">Numéro de téléphone :</label><br/>
                        <input type="text" class="form-controll" id="numero" name="numero"  ><br/>
                        <label for="quantity">Quantité :</label><br/>
                        <input type="number" class="form-controll" id="quantity" name="quantity" value="0"><br/>
                        <input type="text" class="form-contrl" value="@Model.Produit.image" name="image" id="image" />

                    </div>
                    <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                        <div class="d-flex flex-row align-items-center">
                            <input type="number" class="form-control" name="prix" id="prix" value="@Model.Produit.prix" >

                           
                        </div>
                        <h6 class="text-success">Free shipping</h6>
                        <div class="d-flex flex-column mt-4"><input class="btn btn-primary btn-sm" type="submit" value="ajoutercommande"></div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script>
    document.querySelector('form').addEventListener('submit', function (event) {
        var quantity = parseInt(document.getElementById('quantity').value);
        var numero = document.getElementById('numero').value;

        if (quantity === 0 || numero === '') {
            event.preventDefault();
            alert("Le champ 'quantity' est vide ou le champ 'numero' est vide.");
        } else {
            var confirmation = confirm("Es-tu sûr de vouloir ajouter cette commande ?");

            if (confirmation) {
                // Poster la form ici (effectuer l'action "ajouter" du formulaire)
                document.forms[0].submit();
            } else {
                // Annuler l'envoi du formulaire si l'utilisateur a cliqué sur "Annuler" dans l'alerte
                event.preventDefault();
            }
        }
    });
</script>
